<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="raisetech.student.management2.repository.StudentRepository">
  <!--受講生の全件検索-->
  <select id="search" resultType="raisetech.student.management2.data.Student">
    SELECT * FROM students

  </select>


  <!--受講生の検索-->
  <select id="searchStudent" resultType="raisetech.student.management2.data.Student">
    SELECT * FROM students where id = #{id}
  </select>


  <!--受講生コースの全件一覧取得-->
  <select id="searchCourse" resultType="raisetech.student.management2.data.Course">
    SELECT * FROM courses
  </select>

  <!--受講生IDに紐づく受講生コース情報を検索します-->
  <select id="searchStudentCourse" resultType="raisetech.student.management2.data.Course">
    SELECT * FROM courses where student_id = #{studentId}
  </select>

</mapper>